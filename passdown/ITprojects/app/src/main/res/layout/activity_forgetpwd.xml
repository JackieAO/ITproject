<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/share_mid"
    android:orientation="vertical">





    <Button
        android:id="@+id/btn_send_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_email"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:background="#D8BB81"
        android:text="@string/activity_forgetpwd_send"/>

    <EditText
        android:id="@+id/forget_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/login_logo"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:hint="@string/enter_email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="19sp" />


    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="40dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo_xl"
        android:visibility="visible"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/forget_email"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/about_float_right4" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/about_float_left4" />

    <ProgressBar
        android:id="@+id/pb_forget"
        style="?android:attr/progressBarStyle"
        android:layout_width="108dp"
        android:layout_height="79dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>